# Team Project: Menu Selection Program

# Function to display the menu
def display_menu():
    print("Please choose your option from the list below:")
    print("1. Learn Python")
    print("2. Learn Java")
    print("3. Go swimming")
    print("4. Have dinner")
    print("5. Go to bed")
    print("0. Exit")

# Main program
while True:
    display_menu()
    
    # Get user's choice
    choice = input("Enter your choice: ")
    
    # Process the user's choice
    if choice == "1":
        print("You selected: Learn Python. A great choice!")
    elif choice == "2":
        print("You selected: Learn Java. Excellent for object-oriented programming!")
    elif choice == "3":
        print("You selected: Go swimming. Enjoy staying active!")
    elif choice == "4":
        print("You selected: Have dinner. Bon app√©tit!")
    elif choice == "5":
        print("You selected: Go to bed. Have a good rest!")
    elif choice == "0":
        print("Exiting the program. Goodbye!")
        break  # Exit the loop
    else:
        print("Invalid choice. Please select a valid option from the menu.")
    print()  # Print a blank line for better readability
